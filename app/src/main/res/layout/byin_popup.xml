<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dark_60">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/sf_semibold"
            android:text="Buy-In"
            android:textColor="@color/white"
            android:textSize="22dp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:src="@drawable/left_popup_img" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/right_popup_img" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#5BF1F1F1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="#151b26"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available Balance"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/availableBal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:drawablePadding="2dp"
                android:fontFamily="@font/sf_semibold"
                android:text="₹15,500"
                android:textColor="@color/white" />
        </RelativeLayout>

        <TextView
            android:id="@+id/byInAmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:drawablePadding="2dp"
            android:fontFamily="@font/sf_semibold"
            android:textColor="@color/white"
            tools:text="₹800" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Buy in"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/decreaseIv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:padding="6dp"
                android:src="@drawable/minus" />

            <SeekBar
                android:id="@+id/seek"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:progressDrawable="@drawable/progress_light_black"
                android:thumb="@drawable/seekbar_thumb" />

            <ImageView
                android:id="@+id/increaseIv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="20dp"
                android:padding="6dp"
                android:src="@drawable/plus" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <TextView
                android:id="@+id/minByin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="2dp"
                android:text="₹800"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/maxByin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:drawablePadding="2dp"
                android:text="₹2400"
                android:textColor="@color/white" />
        </RelativeLayout>

        <TextView
            android:id="@+id/insufficient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawableStart="@drawable/error_icon_red"
            android:drawablePadding="5dp"
            android:text="Insufficient Balance"
            android:textColor="#FF2626"
            android:visibility="gone" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/close"
                style="@style/buton_tv"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/button_cancel"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="#0a182c" />

            <TextView
                android:id="@+id/join"
                style="@style/buton_tv"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_red"
                android:gravity="center"
                android:text="Join Table" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>