<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dark_bg_8dp"
    android:orientation="vertical"
    android:padding="@dimen/size_24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/proxima_nova_semibold"
        android:text="Existing Accounts"
        android:textColor="@color/white"
        android:textSize="@dimen/text_18sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_changeAcc"
        android:layout_width="@dimen/size_80dp"
        android:layout_height="@dimen/size_32dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/blue_gradient_button"
        android:text="Change"
        android:textAllCaps="false"
        android:textColor="@color/white" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_existingAccounts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_changeAcc"
        android:layout_marginTop="@dimen/size_12dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

</RelativeLayout>