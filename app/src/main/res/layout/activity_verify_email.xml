<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/header"
        layout="@layout/toolbar_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:layout_marginStart="@dimen/size_20dp"
        android:layout_marginEnd="@dimen/size_20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_enter_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_12dp"
            android:text="Enter your Email"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/et_user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dark_bg_8dp"
            android:fontFamily="@font/proximanova_regular"
            android:hint="Email"
            android:padding="@dimen/size_16dp"
            android:singleLine="true"
            android:textColor="#A5A5A5"
            android:textColorHint="#A5A5A5"
            android:textSize="@dimen/text_16sp" />

        <TextView
            android:id="@+id/tv_email_verified"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_16dp"
            android:drawableStart="@drawable/ic_approved_20dp"
            android:drawablePadding="@dimen/size_12dp"
            android:text="Your Email had been successfully verified"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_14sp"
            android:visibility="gone" />

    </LinearLayout>


    <Button
        android:id="@+id/btn_get_otp"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/size_20dp"
        android:layout_marginTop="@dimen/size_50dp"
        android:layout_marginEnd="@dimen/size_20dp"
        android:layout_marginBottom="@dimen/size_20dp"
        android:background="@drawable/blue_gradient_button"
        android:fontFamily="@font/proximanova_regular"
        android:text="Get OTP"
        android:textAllCaps="false"
        android:textColor="@color/white" />

</RelativeLayout>