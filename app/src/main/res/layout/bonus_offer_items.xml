<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <!--<variable
            name="data"
            type="com.gtgt.rummy.ui.offers.model.BonusCodes" />-->
    </data>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fl_OfferCard"
        android:layout_width="168dp"
        android:layout_height="108dp"
        android:layout_marginEnd="@dimen/size_12dp"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/fl_bonusOfferCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/size_4dp"
            android:background="@drawable/blue_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_8dp"
                    android:layout_marginTop="@dimen/size_4dp"
                    android:layout_marginBottom="@dimen/size_8dp"
                    android:fontFamily="@font/sf_regular"
                    android:includeFontPadding="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_12sp"
                    tools:text="Seasonal Card" />
                <!--android:text="@{data.bonus_name}"-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_8dp"
                    android:layout_marginTop="@dimen/size_4dp"
                    android:fontFamily="@font/sf_regular"
                    android:includeFontPadding="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_12sp"
                    tools:text="Add 10,000 or more and get\nCashback of 6,000" />
                <!--android:text="@{`Add `+data.min_deposit_amount+` or more and get\nCashback of `+data.max_cashback}"-->
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="@dimen/size_8dp"
                android:layout_marginEnd="@dimen/size_8dp"
                android:layout_marginBottom="@dimen/size_8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_regular"
                        android:includeFontPadding="false"
                        android:text="Cashback"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_8sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_regular"
                        android:includeFontPadding="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_12sp"
                        tools:text="6,000" />
                    <!--android:text="@{String.valueOf(data.max_cashback)}"-->
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_regular"
                        android:includeFontPadding="false"
                        android:text="Code"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_8sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_regular"
                        android:includeFontPadding="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_12sp"
                        tools:text="YR2020" />
                    <!--android:text="@{data.bonus_code}"-->
                </LinearLayout>
            </FrameLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_bonusBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/size_4dp">

            <ImageView
                android:id="@+id/iv_bonusBadge"
                android:layout_width="@dimen/size_50dp"
                android:layout_height="@dimen/dimen_50dp"
                app:srcCompat="@drawable/ic_bonus_badge" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/sf_regular"
                    android:includeFontPadding="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_10sp"
                    tools:text="60%" />
                <!--android:text="@{data.cashback_percent+`%`}"-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/sf_regular"
                    android:includeFontPadding="false"
                    android:text="Cashback"
                    android:textColor="@color/white"
                    android:textSize="6sp" />
            </LinearLayout>
        </FrameLayout>

    </FrameLayout>
</layout>