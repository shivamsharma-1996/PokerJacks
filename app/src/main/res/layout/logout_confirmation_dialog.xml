<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/size_20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/transparent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/size_8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/dark_bg_8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/size_16dp"
                    android:fontFamily="@font/proxima_nova_bold"
                    android:text="Logout"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_16sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_30dp"
                    android:layout_marginEnd="@dimen/size_30dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:src="@drawable/left_popup_img" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/right_popup_img" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="@dimen/size_30dp"
                    android:layout_marginEnd="@dimen/size_30dp"
                    android:background="#5BF1F1F1" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="76dp"
                    android:layout_marginTop="29dp"
                    android:layout_marginEnd="82dp"
                    android:fontFamily="@font/proximanova_regular"
                    android:text="Are you sure, You want to Logout?"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_28dp"
                    android:layout_marginBottom="@dimen/dimen_16dp"
                    android:gravity="center"
                    android:paddingStart="@dimen/dimen_20dp"
                    android:paddingEnd="@dimen/dimen_20dp">

                    <Button
                        android:id="@+id/logout_btn_no"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/size_8dp"
                        android:layout_weight="1"
                        android:background="@drawable/blue_gradient_button"
                        android:fontFamily="@font/proxima_nova_semibold"
                        android:text="No"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_16sp" />

                    <Button
                        android:id="@+id/logout_btn_yes"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/gray_button"
                        android:fontFamily="@font/proxima_nova_semibold"
                        android:text="Yes"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_16sp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <!--close button-->

    <LinearLayout
        android:layout_width="@dimen/size_40dp"
        android:layout_height="@dimen/size_40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logout_close_btn"
            android:layout_width="@dimen/size_40dp"
            android:layout_height="@dimen/size_40dp"
            android:src="@drawable/ic_close_dialog" />

    </LinearLayout>

</RelativeLayout>