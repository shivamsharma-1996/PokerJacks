                    android:id="@+id/fold_checkCB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:button="@android:color/transparent"
                    android:drawableBottom="@drawable/cb_fold_check"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="15dp"
                    android:text="Fold/Check"
                    android:visibility="gone" />

                <CheckBox
                    android:id="@+id/checkCB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:background="@android:color/transparent"
                    android:button="@android:color/transparent"
                    android:drawableBottom="@drawable/cb_check"
                    android:gravity="center_horizontal"
                    android:text="Check"
                    android:visibility="gone" />



                <CheckBox
                    android:id="@+id/checkOrCallAnyCB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:background="@android:color/transparent"
                    android:button="@android:color/transparent"
                    android:drawableBottom="@drawable/cb_call"
                    android:gravity="center_horizontal"
                    android:text="CallAny/Check"
                    android:visibility="gone" />


<!--
            </RadioGroup>
-->

        </LinearLayout>

        <FrameLayout
            android:id="@+id/cardsDistributionArea"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <include
            android:id="@+id/me"
            layout="@layout/player"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/messageFL"
            android:layout_width="@dimen/_165sdp"
            android:layout_height="@dimen/_85sdp"
            android:visibility="invisible"
            android:layout_centerInParent="true"
            android:translationZ="10dp">

            <ImageView
                android:id="@+id/gameInfoIv"
                android:layout_width="@dimen/_165sdp"
                android:layout_height="@dimen/_85sdp"
                android:alpha="0.4"
                android:scaleType="fitXY"
                android:src="@drawable/game_info_bg"
                android:tint="#000" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="2dp">

                <TextView
                    android:id="@+id/waitingTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Waiting for other players to join"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:visibility="invisible"
                    android:lineSpacingExtra="5sp"/>

                <TextView
                    android:id="@+id/gameStartsTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Game starts in"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:lineSpacingExtra="5sp"                    android:visibility="gone" />
            </LinearLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/offlineMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/orange"
            android:padding="5dp"
            android:text="You are offline"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:visibility="gone" />

        <View
            android:id="@+id/playerTurnIndication"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:background="#00C914"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/themeSelectFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            android:id="@+id/raiseLL"
            layout="@layout/raise_amt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="@dimen/_10sdp"
           android:layout_above="@+id/bottomPannel2"
            android:layout_marginBottom="62dp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/iAMBack"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_10sdp"
            android:padding="0dp"
            android:text="I am Back"
            android:textSize="13dp"
            android:visibility="invisible" />

        <LinearLayout
            android:id="@+id/network_status_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="@dimen/_60sdp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/refresh"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:src="@drawable/reset" />

            <ImageView
                android:id="@+id/signalIv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:src="@drawable/signal_0" />
        </LinearLayout>

        <TextView
            android:id="@+id/portrait_gameIDTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:text=""
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_alignParentTop="true"
            android:textAlignment="center" />

    </RelativeLayout>

