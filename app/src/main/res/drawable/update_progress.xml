<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="#707070" />
            <stroke
                android:width="1.5dp"
                android:color="@android:color/transparent" />
            <corners
                android:bottomRightRadius="@dimen/size_1dp"
                android:topRightRadius="@dimen/size_1dp" />
        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="@color/text_blue" />
                <corners
                    android:bottomLeftRadius="@dimen/size_1dp"
                    android:topLeftRadius="@dimen/size_1dp" />
            </shape>
        </clip>
    </item>
</layer-list>