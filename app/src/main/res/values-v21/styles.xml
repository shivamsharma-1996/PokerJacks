<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>


    <style name="tab_text_appearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/proximanova_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/size_14dp</item>
    </style>

    // custom dialog for filter

    <style name="headline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/sf_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/size_24dp</item>
    </style>

    <style name="title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/sf_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/size_20dp</item>
    </style>

    <style name="subHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/sf_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/size_16dp</item>
    </style>

    <style name="body2orMenu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/sf_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/size_14dp</item>
    </style>

    <style name="body1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/sf_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/size_14dp</item>
    </style>

    <style name="caption">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/sf_regular</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">@dimen/size_12dp</item>
    </style>

    <style name="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/sf_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/size_14dp</item>
    </style>

    <style name="buton_tv" parent="button">
        <item name="android:textAlignment">center</item>
        <item name="android:padding">5dp</item>
    </style>

</resources>